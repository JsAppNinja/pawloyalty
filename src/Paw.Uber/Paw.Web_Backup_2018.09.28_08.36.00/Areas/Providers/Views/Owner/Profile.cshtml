@model Owner
@{
    ViewBag.Title = string.Format("{0}", this.Model.FullName);
}

<!-- Profile -->
<div class="page-head">
    <div class="page-title">
        <h1>
            Owner Profile
            <small>details, reservations, history</small>
        </h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 col-xs-12 col-sm-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <span class="caption-subject bold uppercase font-dark">@this.Model.FullName</span> <small><a href="/Providers/Owner/Update/@this.Model.Id">update</a></small>
                    <span class="caption-help"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-4 col-xs-4 col-sm-4">
                    @AppHelpers.Address(this.Model.StreetAddress, this.Model.City, this.Model.State, this.Model.PostalCode, this.Model.PhoneNumber, this.Model.Email)
                </div>
            </div>

            <div class="row bump">
                <div class="col-lg-12">
                    <strong>PETS</strong> <small><a href="/Providers/Pet/Add?OwnerId=@this.Model.Id">add</a></small>
                    <hr />
                    <div>
                        @if (this.Model.PetCollection.Count > 0)
                {
                    foreach (var pet in this.Model.PetCollection)
                    {
                        <div><a href="/Providers/Pet/Profile/@(pet.Id)">@(pet.Name)</a></div>
            }
        }
        else
        {
            <small>No Pets</small>
}
                    </div>
                </div>
            </div>





            <div class="row bump">
                <div class="col-lg-12">
                    <strong>RESERVATIONS</strong> 
                    <hr />
                    <div>
                        @if (this.Model.PetCollection.Count > 0)
                {
                    foreach (var schedulerEvent in this.Model.SchedulerEventCollection)
                    {
                        <div><a href="#">@(schedulerEvent.SkuCategory.Name) @(schedulerEvent.Start) </a></div>
            }
        }
        else
        {
            <small>No Reservations</small>
}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
